<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.createidea.CreateIdeaFragment">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
        <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:gravity="center_horizontal"
                android:textColor="@color/squid_ink"
                android:textStyle="bold"
                android:layout_marginTop="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Create New Idea"/>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_elevatorPitch_container"
                android:layout_below="@id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tv_elevatorPitch"
                    android:inputType="textMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Elevator Pitch"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
                android:layout_below="@id/et_elevatorPitch_container"
                android:id="@+id/functionality_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <include layout="@layout/card_functionality" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>